<?xml version="1.0" encoding="utf-8"?>
<com.odoo.addons.employees.utils.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selecter"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/customerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingLeft="@dimen/default_8dp"
        android:paddingRight="@dimen/default_16dp"
        android:paddingTop="@dimen/default_8dp">

        <odoo.controls.BezelImageView
            android:id="@+id/image_small"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/default_8dp"
            app:maskDrawable="@drawable/circle_mask" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@string/font_normal"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/body_text_1" />

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@string/font_normal"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/body_text_2" />
            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@string/font_normal"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/body_text_3" />
        </LinearLayout>
    </LinearLayout>
</com.odoo.addons.employees.utils.CheckableLinearLayout>